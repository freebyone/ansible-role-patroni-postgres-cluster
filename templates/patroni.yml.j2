scope: {{ patroni_scope }}
name: "{{ inventory_hostname }}"

restapi:
  listen: 0.0.0.0:{{ patroni_restapi_port }}
  connect_address: "{{ ansible_host }}:{{ patroni_restapi_port }}"
  authentication:
    username: "{{ patroni_restapi_username }}"
    password: "{{ patroni_restapi_password }}"
{% if patroni_restapi_ssl_enabled | default(false) %}
  certfile: "{{ patroni_ssl_cert_path }}"
  keyfile: "{{ patroni_ssl_key_path }}"
  cafile: "{{ patroni_ssl_ca_path }}"
{% endif %}
etcd3:
  hosts: "{{ etcd_servers }}"
  protocol: http

bootstrap:
  dcs:
    ttl: 30
    loop_wait: 10
    retry_timeout: 10
    maximum_lag_on_failover: 1048576
    postgresql:
      use_pg_rewind: true
      use_slots: true
      parameters:
        listen_addresses: '0.0.0.0'
        port: {{ postgresql_port }}
        archive_mode: on
        archive_command: "wal-g wal-push %p"
        restore_command: "wal-g wal-fetch %f %p"
        archive_timeout: 300
{% if postgresql_ssl_enabled | default(false) %}
        ssl: on
        ssl_cert_file: '{{ postgresql_ssl_cert_file | default("server.crt") }}'
        ssl_key_file: '{{ postgresql_ssl_key_file | default("server.key") }}'
        ssl_ca_file: '{{ postgresql_ssl_ca_file | default("") }}'
{% endif %}
{% for key, value in postgresql_parameters.items() %}
        {{ key }}: {{ value | to_json }}
{% endfor %}

  initdb:
  - encoding: UTF8
  - data-checksums
{% if postgresql_ssl_enabled | default(false) %}
  - auth-host="{{ postgres_password_encryption_method }}"
  - auth-local=trust
{% endif %}

  pg_hba:
  - local all all trust
  - host all all 127.0.0.1/32 "{{ postgres_password_encryption_method }}"
  - host replication replicator 0.0.0.0/0 "{{ postgres_password_encryption_method }}"
{% if postgresql_ssl_enabled | default(false) %}
  - hostssl all all 0.0.0.0/0 "{{ postgres_password_encryption_method }}"
  - hostssl pgbouncer pgbouncer 127.0.0.1/32 "{{ postgres_password_encryption_method }}"
  - hostssl pgbouncer pgbouncer ::1/128 "{{ postgres_password_encryption_method }}"
{% else %}
  - host all all 0.0.0.0/0 "{{ postgres_password_encryption_method }}"
  - host pgbouncer pgbouncer 127.0.0.1/32 "{{ postgres_password_encryption_method }}"
  - host pgbouncer pgbouncer ::1/128 "{{ postgres_password_encryption_method }}"
{% endif %}

  users:
    postgres:
      password: "{{ postgres_superuser_password }}"
      options:
        - createrole
        - createdb
    replicator:
      password: "{{ replication_password }}"
      options:
        - replication

postgresql:
  listen: 0.0.0.0:{{ postgresql_port }}
  connect_address: "{{ ansible_host }}:{{ postgresql_port }}"
  data_dir: /var/lib/postgresql/{{ postgresql_version }}/data
  pgpass: /tmp/pgpass
  authentication:
    replication:
      username: replicator
      password: "{{ replication_password }}"
    superuser:
      username: postgres
      password: "{{ postgres_superuser_password }}"
  
  recovery_conf:
    restore_command: "wal-g wal-fetch %f %p"
  
  create_replica_methods:
    - basebackup
    - wal-g
  
  basebackup:
    max-rate: 100M
    checkpoint: fast
  
  wal_g:
    command: /usr/local/bin/wal-g
    env_dir: /etc/wal-g/env

  parameters:
    archive_mode: on
    archive_command: "wal-g wal-push %p"
    restore_command: "wal-g wal-fetch %f %p"
    archive_timeout: 300
{% if postgresql_ssl_enabled | default(false) %}
    ssl: on
    ssl_cert_file: '{{ postgresql_ssl_cert_file | default("server.crt") }}'
    ssl_key_file: '{{ postgresql_ssl_key_file | default("server.key") }}'
    ssl_ca_file: '{{ postgresql_ssl_ca_file | default("") }}'
{% endif %}