scope: {{ patroni_scope }}
name: "{{ inventory_hostname }}"

restapi:
  listen: 0.0.0.0:{{ patroni_restapi_port }}
  connect_address: "{{ ansible_host }}:{{ patroni_restapi_port }}"
  authentication:
    username: "{{ patroni_restapi_username }}"
    password: "{{ patroni_restapi_password }}"

etcd3:
  hosts: "{{ etcd_servers }}"
  protocol: http

bootstrap:
  dcs:
    ttl: 30
    loop_wait: 10
    retry_timeout: 10
    maximum_lag_on_failover: 1048576
    postgresql:
      use_pg_rewind: true
      use_slots: true
      parameters:
        listen_addresses: '0.0.0.0'
        port: {{ postgresql_port }}
        archive_mode: on
        archive_command: "wal-g wal-push %p"
        restore_command: "wal-g wal-fetch %f %p"
        archive_timeout: 300
{% for key, value in postgresql_parameters.items() %}
        {{ key }}: {{ value | to_json }}
{% endfor %}

  initdb:
  - encoding: UTF8
  - data-checksums

  pg_hba:
  - local all all trust
  - host all all 127.0.0.1/32 md5
  - host replication replicator 0.0.0.0/0 md5
  - host all all 0.0.0.0/0 md5
  - host pgbouncer pgbouncer 127.0.0.1/32 md5
  - host pgbouncer pgbouncer ::1/128 md5

  users:
    postgres:
      password: "{{ postgres_superuser_password }}"
      options:
        - createrole
        - createdb
    replicator:
      password: "{{ replication_password }}"
      options:
        - replication

postgresql:
  listen: 0.0.0.0:{{ postgresql_port }}
  connect_address: "{{ ansible_host }}:{{ postgresql_port }}"
  data_dir: /var/lib/postgresql/{{ postgresql_version }}/data
  pgpass: /tmp/pgpass
  authentication:
    replication:
      username: replicator
      password: "{{ replication_password }}"
    superuser:
      username: postgres
      password: "{{ postgres_superuser_password }}"
  
  recovery_conf:
    restore_command: "wal-g wal-fetch %f %p"
  
  create_replica_methods:
    - basebackup
    - wal-g
  
  basebackup:
    max-rate: 100M
    checkpoint: fast
  
  wal_g:
    command: /usr/local/bin/wal-g
    env_dir: /etc/wal-g/env

  parameters:
    archive_mode: on
    archive_command: "wal-g wal-push %p"
    restore_command: "wal-g wal-fetch %f %p"
    archive_timeout: 300