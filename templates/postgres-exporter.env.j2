DATA_SOURCE_NAME="postgresql://{{ postgres_exporter_user }}:{{ postgres_exporter_password }}@localhost:{{ postgresql_port }}/postgres?sslmode={{ 'require' if postgresql_ssl_enabled | default(false) else 'disable' }}"

PG_EXPORTER_PORT="{{ postgres_exporter_port | default(9187) }}"
PG_EXPORTER_EXTEND_QUERY_PATH="/etc/postgres_exporter/queries.yaml"
PG_EXPORTER_LOG_LEVEL="{{ postgres_exporter_log_level | default('info') }}"
PG_EXPORTER_WEB_TELEMETRY_PATH="/metrics"
PG_EXPORTER_DISABLE_DEFAULT_METRICS="{{ postgres_exporter_disable_default_metrics | default('false') }}"
PG_EXPORTER_DISABLE_SETTINGS_METRICS="{{ postgres_exporter_disable_settings_metrics | default('false') }}"

{% if postgres_exporter_ssl_enabled | default(false) %}
PG_EXPORTER_WEB_TLS_CERT_FILE="{{ postgres_exporter_ssl_cert_path }}"
PG_EXPORTER_WEB_TLS_KEY_FILE="{{ postgres_exporter_ssl_key_path }}"
{% endif %}